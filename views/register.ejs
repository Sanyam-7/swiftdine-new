<% include ./partials/header.ejs %> <% include ./header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-[28vw] bg-white px-20 py-10 rounded-[30px]">
    <h1
      class="text-3xl mb-10 text-center font-semibold text-zinc-700 leading-none tracking-tighter capitalize;"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="number"
        name="contact"
        placeholder="Contact-No"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input
        class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full mt-2"
        type="submit"
        value="Create New Account"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service; Opens a new
        tab and acknowledge you've read our Privacy Policy Notice at collection
      </p>
    </form>
    <a
      class="inline-block mt-7 text-sm text-center w-full font-semibold text-zinc-700"
      href="/"
      >Loging Existing Account</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>
